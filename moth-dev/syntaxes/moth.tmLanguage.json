{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Moth",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
			{
				"name": "keyword.control.moth",
				"match": "\\b(if|while|else|attempt|seize|every)\\b"
			},
			{
				"name": "keyword.definition.moth",
				"match": "\\b(namespace|class|foreign|func|static|public|private|local|return)\\b"
			},
			{
				"name": "keyword.constant.moth",
				"match": "\\b(null|true|false|pi)\\b"
			},
			{
				"name": "keyword.operator.moth",
				"match": "(+|-|/|*)"
			}
		]
		},
		"strings": {
			"name": "string.quoted.double.moth",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.moth",
					"match": "\\\\"
				}
			]
		}
	},
	"scopeName": "source.moth"
}