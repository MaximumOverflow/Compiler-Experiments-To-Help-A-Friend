{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Moth",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#types"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#variables"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.moth",
					"match": "//.*$"
				}
			]
		},
		"keywords": {
			"patterns": [
			{
				"name": "keyword.control.moth",
				"match": "\\b(if|while|else|attempt|seize|every)\\b"
			},
			{
				"name": "keyword.other.moth",
				"match": "\\b(namespace|class|foreign|func|static|public|private|local|return)\\b"
			}
		]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.numeric.moth",
					"match": "\\b\\d\\b"
				},
				{
					"name": "constant.character.escape.moth",
					"match": "\\b(self|null|true|false|pi)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.moth",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.moth",
					"match": "\\\\"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "support.type.moth",
					"match": "#[A-Za-z0-9]+\\*?"
				}
			]
		},
		"functions": {
			"patterns": [
				{
					"name": "support.function.moth",
					"match": "[A-Za-z0-9]+\\("
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"name": "variable.name.moth",
					"match": "[A-Za-z0-9]+"
				}
			]
		}
	},
	"scopeName": "source.moth"
}